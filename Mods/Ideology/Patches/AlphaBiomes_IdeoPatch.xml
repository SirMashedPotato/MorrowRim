<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Biomes</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
		
				<!-- occular plants -->
		
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="AB_AlienGrass" or defName="AB_RedLeaves" or defName="AB_RedPlantsTall" or defName="AB_AlienTree" or defName="AB_HalfAlienTree" or defName="AB_TentacularPlant" or defName="AB_GlobularPlant" or defName="AB_BloodBouquet"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<!-- mechanoid plants -->
		
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="AB_SessileMechanoid" or defName="AB_HardyGrass"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<!-- graveyard plants -->
		
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="AB_TangleTea" or defName="AB_EuphorbiaRimworldia" or defName="AB_DeadBowerTree"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<!-- volcanic plants -->
		
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="AB_BrownBarrelCactus" or defName="AB_TinkleGrass" or defName="AB_FirevineTree"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

