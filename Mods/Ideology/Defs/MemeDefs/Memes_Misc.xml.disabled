        <li>InsectMeatEating_Loved</li>
      </li>
	  <li>
        <li>RoughLiving_Welcomed</li>
      </li>
	  <li>
        <li>Slavery_Disapproved</li>
        <li>Slavery_Acceptable</li>
        <li>Slavery_Honorable</li>
      </li>
    </requireOne>
    <generalRules>
      <rulesStrings>
        <li>memeCreed->ash</li>
        <li>memeCreed->fire</li>
        <li>memeCreed->foyoda</li>
        <li>memeCreed->silt</li>
        <li>memeAdjective->fungal</li>
        <li>memeAdjective->ashen</li>
        <li>memeHyphenPrefix->insectoid</li>
        <li>memeHyphenPrefix->fungus</li>
        <li>memeHyphenPrefix->ash</li>
        <li>memeHyphenPrefix->silt</li>
