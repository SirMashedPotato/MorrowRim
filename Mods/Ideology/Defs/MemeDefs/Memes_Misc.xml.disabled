        <li>memeConcept->silt</li>
        <li>memeConcept->fire</li>
        <li>memeLeaderNoun->ashspeaker</li>
        <li>memeLeaderNoun->ashkhan</li>
        <li>memeLeaderNoun->breather</li>
        <li>memeLeaderAdjective->ash</li>
        <li>memeLeaderAdjective->silt</li>
        <li>memeLeaderAdjective->fire</li>
