<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Giddy-up! Battle Mounts</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName = "MorrowRim_SiltStrider"]</xpath> 
					<value>
						<li Class="GiddyUpCore.CustomStatsPatch">
							<speedModifier>1.5</speedModifier>
							<armorModifier>1.2</armorModifier>
							<useMetalArmor>false</useMetalArmor>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName = "MorrowRim_SiltStrider"]</xpath> 
					<value>
						<li Class="GiddyUpCore.DrawingOffsetPatch">
							<eastOffsetCSV>0.0,0,3</eastOffsetCSV>
							<westOffsetCSV>0.0,0,3</westOffsetCSV>
							<northOffsetCSV>0,0,2.48</northOffsetCSV>
							<southOffsetCSV>0,0,2.48</southOffsetCSV>
						</li>				
					</value>
				</li>

			</operations>
		</match>
	</Operation>


</Patch>

