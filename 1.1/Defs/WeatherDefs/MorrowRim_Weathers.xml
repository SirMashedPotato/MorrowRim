		  <sky>(0.8,0.8,0.8)</sky>
		  <shadow>(0.92,0.92,0.92)</shadow>
		  <overlay>(1,1,1)</overlay>
		  <saturation>0.8</saturation>
		</skyColorsDay>
		<skyColorsDusk>
		  <sky>(1,1,1)</sky>
		  <shadow>(0.92,0.92,0.92)</shadow>
		  <overlay>(1,1,1)</overlay>
		  <saturation>0.8</saturation>
		</skyColorsDusk>
		<skyColorsNightEdge>
