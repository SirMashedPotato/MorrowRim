<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Magical Menagerie</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="MM_LernaeanHydra"]/race/wildBiomes</xpath>
					<value>
						<MorrowRim_Ashlands>0.01</MorrowRim_Ashlands>
						<MorrowRim_BlightedAshlands>0.01</MorrowRim_BlightedAshlands>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MM_LernaeanHydra"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="MM_WillOWisp"]/race/wildBiomes</xpath>
					<value>
						<MorrowRim_Ashlands>0.01</MorrowRim_Ashlands>
						<MorrowRim_BlightedAshlands>0.01</MorrowRim_BlightedAshlands>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MM_WillOWisp"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>					
				
			</operations>
		</match>
	</Operation>
	
</Patch>

