<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Mutated Animals Pack</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
	
				<!-- give select  animals ash-resistant -->
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="RG-WF_WastelandDeer"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="RG-WF_WastelandSquirrel"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="RG-WF_WastelandBeaver"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="RG-WF_WastelandBear"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="RG-WF_WastelandDeathclaw"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>

