<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Magical Menagerie</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName="MorrowRim_Ashlands"]/wildAnimals</xpath>
					<value>
						<MM_LernaeanHydra>0.01</MM_LernaeanHydra>
						<MM_WillOWisp>0.01</MM_WillOWisp>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName="MorrowRim_BlightedAshlands"]/wildAnimals</xpath>
					<value>
						<MM_LernaeanHydra>0.01</MM_LernaeanHydra>
						<MM_WillOWisp>0.01</MM_WillOWisp>
					</value>
				</li>
	
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MM_LernaeanHydra"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MM_WillOWisp"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>					
				
			</operations>
		</match>
	</Operation>
	
</Patch>

